root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[Makefile]
indent_style = space
indent_size = 4

[*.{g4, g}]
indent_style = space
indent_size = 4

[*.{py}]
indent_style = space
indent_size = 4

[*.{json, yml}]
indent_style = space
indent_size = 4

[*.{md, markdown}]
indent_style = space
indent_size = 4
insert_final_newline = false
